{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install vue3",
      "dependsOrder": "sequence",
      "dependsOn": ["Install vite-vue3-app", "Install vue3-submodule"],
      "problemMatcher": [],
      "group": "build",
      "detail": "首次运行时，会自动安装所有依赖"
    },
    {
      "label": "Update Submodules",
      "type": "shell",
      "command": "git submodule update --remote --merge",
      "problemMatcher": [],
      "group": "build",
      "detail": "更新子模块"
    },
    {
      "label": "Install vite-vue3-app",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/vite-vue3-app"
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "vite-vue3-app依赖安装"
    },
    {
      "label": "Install vue3-submodule",
      "type": "shell",
      "command": "pnpm install --prefix ../vue3-submodule",
      "options": {
        "cwd": "${workspaceFolder}/vite-vue3-app"
      },
      "problemMatcher": [],
      "group": "build",
      "detail": "vue3-submodule依赖安装"
    }
  ]
}
